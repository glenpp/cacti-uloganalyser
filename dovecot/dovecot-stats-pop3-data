PATH=/bin:/usr/bin
STATS=/var/local/snmp/mail


printf "%d\n" `grep ^dovecot:pop3:bytes:in= $STATS | cut -d '=' -f2`
printf "%d\n" `grep ^dovecot:pop3:bytes:out= $STATS | cut -d '=' -f2`
